@model Blog.EntityLayer.Entities.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav class="navbar navbar-expand navbar-dark bg-dark align-items-center justify-content-center">
    <h2 class="text-bold">KATEGORİ DÜZENLE</h2>
</nav>
<div class="p-3">
    @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
            <br />
            @Html.Label("Kategori Adı")
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            <br /><br />
            @Html.Label("Kategori Açıklama")
            @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
            <br />
            <button class="btn btn-success">Kaydet</button>
        </div>
    }
</div>

