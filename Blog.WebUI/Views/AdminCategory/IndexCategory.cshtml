@using Blog.EntityLayer.Entities
@model IQueryable<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <nav class="navbar navbar-expand navbar-dark bg-dark align-items-center justify-content-center">
            <h2 class="text-bold">KATEGORİLER</h2>
        </nav>

        <!-- Default box -->
        <div class="p-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><a href="/AdminCategory/AddCategory" class="btn btn-success btn-sm"><span class="mr-2 fas fa-plus"></span>Yeni Kategori</a></h3><br />
                </div>
                <!-- card-body -->
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    Kategori
                                </th>
                                <th style="width: 30%" class="text-center">
                                    Açıklama
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a>
                                            @item.CategoryName
                                        </a>
                                    </td>
                                    <td class="project-state">
                                        <span class="badge">@item.CategoryDescription</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/AdminHeading/HeadingByCategory/@item.Id">
                                            <i class="fas fa-folder">
                                                Başlıklar
                                            </i>

                                        </a>
                                        <a class="btn btn-info btn-sm" href="/AdminCategory/EditCategory/@item.Id">
                                            <i class="fas fa-pencil-alt">
                                                Düzenle
                                            </i>

                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.Id">
                                            <i class="fas fa-trash">
                                                Sil
                                            </i>

                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.Default box -->
        </div>

    </section>
    <!-- /. Main content -->
</body>

