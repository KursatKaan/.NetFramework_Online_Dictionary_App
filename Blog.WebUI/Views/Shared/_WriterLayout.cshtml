@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Blog Web App | Yazar Paneli</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminTheme/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/AdminTheme/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminTheme/dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminTheme/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid px-5">
            <div class="row w-100 d-flex justify-content-start">
                <div class="col-6">
                    <a class="navbar-brand" href="/Home/Home">
                        <img src="~/AdminTheme/SözlükLogo2.png" />
                    </a>
                </div>
                <div class="col-6 d-flex flex-column align-items-end justify-content-center">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Home">Siteye Git</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/WriterLogin/LogOut">Çıkış</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex justify-content-center text-bold text-white">
                    Yazar Paneli
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/WriterPanelProfile/WriterProfile" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Profilim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/WriterPanelMessage/WriterInboxMessage" class="nav-link">
                                <i class="nav-icon fa fa-envelope"></i>
                                <p>
                                    Mesajlarım
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/WriterPanelContent/WriterContent" class="nav-link">
                                <i class="nav-icon fa fa-comment-dots"></i>
                                <p>
                                    Entrylerim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanelHeading/WriterHeading" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Başlıklarım
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanelHeading/AllHeadings" class="nav-link">
                                <i class="nav-icon fa fa-project-diagram"></i>
                                <p>
                                    Tüm Başlıklar
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Main Content Wrapper. -->
        <div class="content-wrapper">
            <div class="content p-0">
                @RenderBody()
            </div>
        </div>
        <!-- /. main content-wrapper -->
    </div>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/AdminTheme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/AdminTheme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminTheme/dist/js/adminlte.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminTheme/dist/js/adminlte.min.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/AdminTheme/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminTheme/dist/js/demo.js"></script>
    <script src="~/AdminTheme/dist/js/pages/dashboard3.js"></script>
    <script src="~/AdminTheme/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- /.About Add Popup-->
